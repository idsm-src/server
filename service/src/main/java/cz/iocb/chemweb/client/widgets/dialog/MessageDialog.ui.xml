<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
    .main {
      width: 400px;
    }

    .button {
      height: 30px;
      width: 80px;
    }

    .html {
      padding: 10px;
    }
  </ui:style>

  <g:DialogBox autoHide="true" modal="true">
    <g:caption><b>Error Message</b></g:caption>

    <g:FlowPanel addStyleNames="{style.main}">
      <g:HTML ui:field="html" addStyleNames="{style.html}" />

      <g:HorizontalPanel width="100%" height="50px">
        <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
          <g:Button ui:field="okButton" addStyleNames="{style.button}">OK</g:Button>
        </g:cell>
      </g:HorizontalPanel>

    </g:FlowPanel>
  </g:DialogBox>
</ui:UiBinder>
