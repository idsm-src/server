#sparql($compound)
  SELECT ?NAME FROM ebi:chebi WHERE
  {
    $entity rdfs:label ?NAME
  }
#end

#sparql($structure)
  SELECT (true as ?R) FROM ebi:chebi WHERE
  {
    ?S rdf:type sio:SIO_011120.
    ?S sio:SIO_000011 $entity.
    ?S sio:SIO_000300 ?V.
  }
#end

<table style="width:100%">
  <tbody>
    <tr>
      #if($structure.count > 0)
      <td style="width:90px">
        <table style="width:80px">
          <tbody>
            <tr>
              <td><img loading='lazy' src="chebi/compound/image?w=160&id=$entity.getValue().replaceFirst(".*/CHEBI_", "")" height="80" width="80"></td>
            </tr>
          </tbody>
        </table>
      </td>
      #end
      <td>
        <table>
          <tbody>
            <tr>
              #if($compound.NAME)
              <td>#escapeHTML($compound.NAME)</td>
              #else
              <td>$entity.getValue().replaceFirst(".*/", "")</td>
              #end
            </tr>
            <tr>
              <td><small style="color:gray">#escapeIRI($entity)<small></td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </tbody>
</table>
