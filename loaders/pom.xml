              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>chebi-load</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>cz.iocb.load.chebi.ChEBI</mainClass>
            </configuration>
          </execution>

          <!-- mesh -->
          <execution>
            <id>mesh-download</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>src/main/scripts/download-mesh.sh</executable>
            </configuration>
          </execution>
          <execution>
            <id>mesh-dbinit</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>src/main/scripts/run_psql.sh</executable>
              <arguments>
                <argument>src/main/sql/mesh/base.sql</argument>
                <argument>src/main/sql/mesh/schema.sql</argument>
                <argument>src/main/sql/mesh/settings.sql</argument>
                <argument>src/main/sql/mesh/foreignkey.sql</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>mesh-load</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>cz.iocb.load.mesh.Mesh</mainClass>
            </configuration>
          </execution>

          <!-- wikidata -->
          <execution>
            <id>wikidata-dbinit</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>src/main/scripts/run_psql.sh</executable>
              <arguments>
                <argument>src/main/sql/wikidata/base.sql</argument>
                <argument>src/main/sql/wikidata/schema.sql</argument>
                <argument>src/main/sql/wikidata/settings.sql</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>sachem-load-wikidata</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>cz.iocb.load.sachem.WikidataCompoundUpdater</mainClass>
            </configuration>
          </execution>

          <!-- mona -->
          <execution>
            <id>mona-download</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>src/main/scripts/download-mona.sh</executable>
            </configuration>
          </execution>
          <execution>
            <id>mona-dbinit</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>src/main/scripts/run_psql.sh</executable>
              <arguments>
                <argument>src/main/sql/mona/base.sql</argument>
                <argument>src/main/sql/mona/schema.sql</argument>
                <argument>src/main/sql/mona/sachem.sql</argument>
                <argument>src/main/sql/mona/crosslinks.sql</argument>
                <argument>src/main/sql/mona/settings.sql</argument>
                <argument>src/main/sql/mona/foreignkey.sql</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>mona-load</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>cz.iocb.load.mona.MoNA</mainClass>
            </configuration>
          </execution>

          <!-- isdb -->
          <execution>
            <id>isdb-download</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>src/main/scripts/download-isdb.sh</executable>
            </configuration>
          </execution>
          <execution>
            <id>isdb-dbinit</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>src/main/scripts/run_psql.sh</executable>
              <arguments>
                <argument>src/main/sql/isdb/base.sql</argument>
                <argument>src/main/sql/isdb/schema.sql</argument>
                <argument>src/main/sql/isdb/sachem.sql</argument>
                <argument>src/main/sql/isdb/crosslinks.sql</argument>
                <argument>src/main/sql/isdb/settings.sql</argument>
                <argument>src/main/sql/isdb/foreignkey.sql</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>isdb-load</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>src/main/scripts/load-isdb.sh</executable>
            </configuration>
          </execution>

          <!-- stats -->
          <execution>
            <id>stats-dbinit</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>src/main/scripts/run_psql.sh</executable>
              <arguments>
                <argument>src/main/sql/stats/base.sql</argument>
                <argument>src/main/sql/stats/schema.sql</argument>
                <argument>src/main/sql/stats/settings.sql</argument>
                <argument>src/main/sql/stats/foreignkey.sql</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>stats-load</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>cz.iocb.load.stats.GenerateVoid</mainClass>
            </configuration>
          </execution>

        </executions>
      </plugin>
    </plugins>
  </build>

</project>
